{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ðŸš€ Bridge to Codex",
      "type": "shell",
      "command": "./.agent/scripts/bridge.sh ${input:workflowName}",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
