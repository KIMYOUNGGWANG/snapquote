    }
  ],
  "inputs": [
    {
      "id": "workflowName",
      "type": "pickString",
      "description": "Select the workflow for Codex:",
      "options": [
        "develop",
        "fix",
        "launch",
        "ship",
        "micro",
        "cycle",
        "ideate",
        "uiux",
        "optimize",
        "marketing"
      ],
      "default": "develop"
    }
  ]
}